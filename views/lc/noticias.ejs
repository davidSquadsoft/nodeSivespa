<%-include ('includes/header') -%>
    <!--Area de Principal-->

    <div class="container mt-lg-5 filtro_busqueda">
        <!--filtro y buscador de noticias-->
        <form action="/lc/buscarnoticia" class="d-inline-flex w-100 ms-3" method="post">
            <input class="form-control round_input" type="search" placeholder="Buscar" name="kbuscar" />
            <button class="btn_search" type="submit">
          <i class="bi bi-search"></i>
        </button>
        </form>
        <div class="row d-grid justify-content-end">
          
        </div>
        <!--Noticias-->

        <div class="row mt-5 card-deck">
            <% noticias.forEach((datanoticias)=>{ %> 
            <div class="col-lg-4 pt-3">
                <div class="card" onclick="location.href='/lc/vernoticia/<%= datanoticias.id%>'">
                    <img class="card-img-top" src="/upload/<%= datanoticias.imagen %>" alt="Card image cap" style=" object-fit: cover; width: 720;height: 360px;">
                    <div class="card-body">
                        <h5 class="card-title"><%= datanoticias.titulo %></h5>
                        <p class="card-text"><% resumen=datanoticias.texto %><%= resumen.substr(0,30) %></p>
                        <p class="card-text"><small class="text-muted">Fecha: <%= datanoticias.fcreacion.toISOString().slice(0,10) %></small></p>
                    </div>
                </div>
            </div>
            <% }) %> 
           
        </div>
    </div>
    <%-include ('includes/footer') -%>