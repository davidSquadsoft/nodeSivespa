<%- include('../includes/header') -%>
    <section class="content">
        <div class="titulo_pagina row align-items-center">
            <div class="col-lg-2">
                <div class="btn_close d-md-none d-lg-block">
                    <button type="button" class="close_sidebar">
                        <i class="bi bi-arrows-fullscreen maximize" id="texto_button_sidebar">&nbsp;Maximizar</i>
                    </button>
                </div>
            </div>

            <div class="col-lg-4">
                <h4>
                    <%= tittle%>
                </h4>
            </div>

            <div class="col-lg-6 d-md-none d-lg-block">
                <div class="bell_notificaciones"><a href="/da/notificaciones"><i class="bi bi-bell-fill"></i></a></div>
                <div class="dropdown">
                    <button class="btn btn-secondary  dropdown-toggle" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        <% if(user) {%>
                            <p class="nombre_entidad_activa">
                            <%= user.NOMBRE %> <%= user.APELLIDO %>
                            </p><% }%>
                        <br>
                        <p class="cambiar"><%= user.ENTIDAD %></p>
           
              
                </div>
            </div>
        </div>
        <div class="section_form fluid-container">

            <div class="container_reporte_form ">
                <div class="row buscar crear_contenido">
                    <form action="/da/guardaroferta" autocomplete="off" method="post" id="form">
                        <div class="row">

                            <div class="col-lg-12 col-xs-12">
                                <label for="">Titulo</label>
                                <input type="text" name="titulo" id="titulo" required>

                            </div>


                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-xs-12">
                                <label for="" class="form-label">Seleccione la Spa a la que va dirigida el plan:</label>
                                <select name="spa" id="" class="form-control">
                                    <% spa.forEach((lspa)=>{ %> 
                                    <option value="<%= lspa.id_rl_lista_spa %>"><%= lspa.SUSTANCIA %></option>
                                    <% }) %> 
                                </select>
                                
                            



                            </div>
                            <div class="col-lg-6 col-xs-12">
                              
                                <div class="row">
                                 
                                    <div class="col-lg-6">
                                        <label for="">Edad de inicio</label>
                                        <input type="number" name="edadini" class="form-control" id="" required>
                                    </div>
                                    <div class="col-lg-6">
                                        <label for="">Edad final</label>
                                        <input type="number" name="edadfinal" class="form-control" id="" required>
                                    </div>
                                </div>



                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-xs-12">
                                <label for="">Contenido</label>
                                <textarea rows="20" name="contenido" class="form-control" required></textarea>
                            </div>
                        </div>
                        <div class="row">
                           <div class="col-lg-1 col-xs-12 "><button  type="button" onclick="validar();" class="btn_green align-center">Publicar</button></div>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </section>

    <script src="/admin/scripts/validaroferta.js"></script>
    <%- include('../includes/footer') -%>