<%- include('../includes/header') -%>
    <section class="content">
        <div class="titulo_pagina row align-items-center">
            <div class="col-lg-2">
                <div class="btn_close d-md-none d-lg-block">
                    <button type="button" class="close_sidebar">
                        <i class="bi bi-arrows-fullscreen maximize" id="texto_button_sidebar">&nbsp;Maximizar</i>
                    </button>
                </div>
            </div>
            <div class="col-lg-4">
                <h4>
                    <%= tittle %>
                </h4>
            </div>
            <div class="col-lg-6 d-md-none d-lg-block">
                <div class="bell_notificaciones"><a href="/da/notificaciones"><i
                            class="bi bi-bell-fill"></i></a></div>
                <div class="dropdown">
                    <button class="btn btn-secondary  dropdown-toggle" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        <% if(user) {%>
                            <p class="nombre_entidad_activa">
                            <%= user.NOMBRE %> <%= user.APELLIDO %>
                            </p><% }%>
                        <br>
                        <p class="cambiar"><%= user.ENTIDAD %></p>
           
              
                </div>
            </div>
        </div>
        <div class="section_form fluid-container">
            <div class="container_reporte_form ">
                
                  <div class="row">
                    <form action="/da/updatelinea" method="post">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Editar <%= todaslineas.nombre %> </h5>
                      
                        </div>
                        <div class="modal-body modal_lineas">
                            <div class="row ">
                                
                                <div class="col-lg-6 ">
                                    <input type="number" name="id" value="<%= todaslineas.id %>" id="" hidden>
                                    <label for="" class="">Nombre:</label>
                                    <input type="text" name="nombre" class="form-control" value="<%= todaslineas.nombre %>" required>
                                </div>
                                <div class="col-lg-6">
                                    <label for="" class="">Numero:</label>
                                    <input type="text" name="numero" class="form-control" value="<%= todaslineas.numero %>" required>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-lg-12">
                                    <label for="" class="form-label">Informaci√≥n</label>
                                    <textarea name="descripcion" id="" rows="10" class="w-100" required><%= todaslineas.description %></textarea>
                                </div>
                            </div>
                            <div class="row mt-3" >
                                <div class="col-lg-12">
                                    <label for="" class="form-label">Spa</label>
                                    <select name="spa" id="" class="form-select">
                                        <option value="0">No, dirigido de manera general</option>
                                        <% listaspa.forEach((lspa)=>{ %> 
                                            <option value="<%= lspa.id_rl_lista_spa  %>" <% if (todaslineas.id_rl_lista_spa==lspa.id_rl_lista_spa) {%>selected="selected" <% } %>  > <%= lspa.SUSTANCIA %> </option>
                                            <% }) %> 
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class=" btn_green">Guardar</button>
                            <button type="button" class=" btn_green" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </form>
            </div>
    </section>


    <%- include('../includes/footer') -%>